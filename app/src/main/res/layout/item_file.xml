<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/contains"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/title_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/title_hed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/title_hed"
                            android:text="-"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/title_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/line"
                            android:maxLines="2"
                            android:text="Fjallraven - Foldsack No. 1 Backpack, Fits 15 Laptops"
                            android:textColor="#595959"
                            android:textSize="14.5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/category_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_relative">

                        <TextView
                            android:id="@+id/category_hed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/l1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/category_hed"
                            android:text="-"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/category_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/l1"
                            android:text="men's clothing"
                            android:textColor="#595959"
                            android:textSize="14.5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/price_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/category_relative">

                        <TextView
                            android:id="@+id/price_hed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/l2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/price_hed"
                            android:text="-"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/l2"
                            android:text="109.00"
                            android:textColor="#8C2222"
                            android:textSize="14.5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/price_relative">

                        <TextView
                            android:id="@+id/description_hed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/l3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/description_hed"
                            android:text="-"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/description_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/l3"
                            android:text="109.00"
                            android:textColor="#595959"
                            android:maxLines="4"
                            android:textSize="14.5dp" />
                    </RelativeLayout>
                </RelativeLayout>


                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@+id/contains" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>